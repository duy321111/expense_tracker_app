<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Headings -->
    <style name="Heading1">
        <item name="android:textSize">40sp</item>
        <item name="android:lineSpacingExtra">20sp</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="Heading2">
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingExtra">16sp</item>
        <item name="android:fontFamily">@font/bold</item>

    </style>

    <style name="Heading3">
        <item name="android:textSize">28sp</item>
        <item name="android:lineSpacingExtra">14sp</item>
        <item name="android:fontFamily">@font/bold</item>

    </style>

    <style name="Heading4">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:fontFamily">@font/bold</item>

    </style>

    <style name="Heading5">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:fontFamily">@font/bold</item>

    </style>

    <!-- Body text -->
    <style name="Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:fontFamily">@font/medium</item>

    </style>

    <style name="Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Caption1">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textStyle">normal</item>
    </style>



    <style name="CircleImage" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="RoundedXL" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>

    <style name="TextYTick">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#8D8D8D</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DashedLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/dash_line</item>
    </style>


    <style name="SettingsItem" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:padding">16dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/neutral_900</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
    </style>
</resources>
