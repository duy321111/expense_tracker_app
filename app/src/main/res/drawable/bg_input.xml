<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền ô input -->
    <solid android:color="@color/neutral_700" />

    <!-- Viền -->
    <stroke
        android:width="1dp"
        android:color="@color/neutral_300" />

    <!-- Bo góc -->
    <corners android:radius="20dp" />

    <!-- Khoảng cách bên trong (padding) -->
    <padding
        android:left="10dp"
        android:top="6dp"
        android:right="10dp"
        android:bottom="6dp" />
</shape>
