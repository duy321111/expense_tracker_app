<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền -->
    <solid android:color="@color/primary_1" />

    <!-- Bo góc -->
    <corners android:radius="8dp" />
    <!-- Viền (nếu cần) -->
    <stroke
        android:width="2dp"
        android:color="@color/primary_3" />

    <!-- Khoảng cách trong (padding nếu dùng trong TextView) -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
