<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_card_neutral_50"
    android:padding="12dp"
    android:gravity="center_vertical">

    <!-- Icon trái -->
    <FrameLayout
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_icon_round_white">

        <ImageView
            android:id="@+id/leftIcon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_category"
            app:tint="@color/neutral_800" />
    </FrameLayout>

    <!-- Phần chữ -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiêu đề"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvValue"
            style="@style/Caption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá trị hiển thị"
            android:textColor="@color/neutral_800" />
    </LinearLayout>

    <!-- Icon phải (tùy chọn, ví dụ mũi tên hoặc nút edit) -->
    <ImageView
        android:id="@+id/rightIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_chevron_right"
        app:tint="@color/neutral_800" />
</LinearLayout>
