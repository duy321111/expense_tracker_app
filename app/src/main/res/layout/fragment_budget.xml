<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnBackToMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Quay lại"
            android:textAllCaps="false"
            android:backgroundTint="#6200EE"
            android:textColor="@android:color/white"
            android:layout_gravity="start"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/monthSelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btnPrevMonth"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:src="@drawable/ic_arrow_left"
                android:contentDescription="Previous month" />

            <TextView
                android:id="@+id/tvCurrentMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Month"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp" />

            <ImageButton
                android:id="@+id/btnNextMonth"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="Next month" />

        </LinearLayout>
        <TextView
            android:text="Expenses ₫0"
            android:textSize="16sp"
            android:textColor="#666"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:columnCount="2"
            android:rowCount="4"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="#FFF6D1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:onClick="openAddExpense">

                <ImageView
                    android:src="@drawable/ic_fooddrinks"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView
                    android:text="Food &amp; Drink"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="₫0"
                    android:textSize="13sp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="#D1EEFF"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1">

                <ImageView
                    android:src="@drawable/ic_transport"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView
                    android:text="Transportation"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="₫0"
                    android:textSize="13sp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="#FFE5D1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1">

                <ImageView
                    android:src="@drawable/ic_home"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView
                    android:text="Housing &amp; Utilities"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="₫0"
                    android:textSize="13sp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="#FFD1E8"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1">

                <ImageView
                    android:src="@drawable/ic_shopping"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView
                    android:text="Shopping"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="₫0"
                    android:textSize="13sp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="#D1FFF2"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1">

                <ImageView
                    android:src="@drawable/ic_health"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView
                    android:text="Health Care"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="₫0"
                    android:textSize="13sp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="#E4D1FF"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1">

                <ImageView
                    android:src="@drawable/user"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView
                    android:text="Personal"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="₫0"
                    android:textSize="13sp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="#FFF6D1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1">

                <ImageView
                    android:src="@drawable/ic_membership"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView
                    android:text="Membership"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="₫0"
                    android:textSize="13sp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="#FFD1E0"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1">

                <ImageView
                    android:src="@drawable/ic_giving"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView
                    android:text="Giving"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="₫0"
                    android:textSize="13sp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </GridLayout>

    </LinearLayout>
</ScrollView>
