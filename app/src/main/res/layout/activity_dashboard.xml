<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Container chứa các Fragment -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"/> <!-- chừa chỗ footer -->

    <!-- Footer navbar + FAB -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/footerBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        app:cardBackgroundColor="@color/neutral_50"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp">

        <include layout="@layout/layout_bottom_nav_content" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/cd_add_transaction"
            android:src="@drawable/ic_add"
            app:backgroundTint="@color/primary_1"
            app:fabCustomSize="40dp"
            app:fabSize="mini"
            app:maxImageSize="36dp"
            app:tint="@android:color/white" />
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
