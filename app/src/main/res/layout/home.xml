<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_5"
    android:fitsSystemWindows="true"
    tools:context=".ui.Home">

    <!-- AppBar + Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/modal_bg"
            app:titleTextColor="@android:color/transparent"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/user"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    android:contentDescription="@string/app_name"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        style="@style/Heading5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/greeting_placeholder"
                        android:textColor="@color/black"/>

                    <TextView
                        style="@style/Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_name_placeholder"
                        android:textColor="@color/neutral_800"/>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnReload"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_reload"
                    android:contentDescription="@string/cd_reload"
                    app:tint="@color/primary_1"/>

                <ImageButton
                    android:id="@+id/btnNotification"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_notification"
                    android:contentDescription="@string/cd_open_notifications"
                    app:tint="@color/primary_1"/>
            </LinearLayout>
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Nội dung cuộn -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Thẻ ngân hàng -->
            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="4dp"
                android:background="@drawable/rounded_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/bg_wallet_home"
                    android:elevation="6dp"
                    android:clipToOutline="true">

                    <TextView
                        android:id="@+id/Title_wallet"
                        style="@style/Heading5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_wallet_info"
                        android:textColor="@color/primary_1"
                        android:layout_marginTop="8dp"/>

                    <Spinner
                        android:id="@+id/spinner_wallet"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:spinnerMode="dropdown"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:entries="@array/wallet_array"/>

                    <TextView
                        android:id="@+id/tv_wallet_owner"
                        style="@style/Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wallet_owner_placeholder"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tv_wallet_balance"
                        style="@style/Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wallet_balance_placeholder"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

            </LinearLayout>

            <!-- ====== TÌNH HÌNH THU CHI ====== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/modal_bg">

                <!-- Header: tiêu đề + chọn tháng -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/Heading5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/title_chart"
                        android:textColor="@color/black"/>

                    <Spinner
                        android:id="@+id/spnMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:paddingHorizontal="8dp"
                        android:background="@drawable/bg_spinner_outline"
                        android:popupTheme="@style/ThemeOverlay.Material3.MaterialAlertDialog"
                        android:entries="@array/month_options"/>
                </LinearLayout>

                <!-- Biểu đồ 2 cột + trục Y -->
                <RelativeLayout
                    android:id="@+id/chartArea"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp">

                    <!-- Cột nhãn trục Y -->
                    <LinearLayout
                        android:id="@+id/yAxis"
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:orientation="vertical"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:gravity="bottom">

                        <TextView
                            android:id="@+id/tvY100"
                            style="@style/TextYTick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/tvY75"
                            style="@style/TextYTick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/tvY50"
                            style="@style/TextYTick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/tvY25"
                            style="@style/TextYTick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/tvY0"
                            style="@style/TextYTick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Khu vẽ cột và vạch ngang -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@id/yAxis"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="bottom">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@drawable/dash_line"/>

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@drawable/dash_line"/>

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@drawable/dash_line"/>

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@drawable/dash_line"/>
                        </LinearLayout>

                        <!-- Hai cột -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom|center_horizontal"
                            android:orientation="horizontal">

                            <View
                                android:id="@+id/barIncome"
                                android:layout_width="120dp"
                                android:layout_height="0dp"
                                android:layout_marginEnd="32dp"
                                android:background="@drawable/bg_bar_orange"/>

                            <View
                                android:id="@+id/barSpending"
                                android:layout_width="120dp"
                                android:layout_height="0dp"
                                android:background="@drawable/bg_bar_purple"/>
                        </LinearLayout>
                    </FrameLayout>
                </RelativeLayout>

                <!-- Thẻ thông tin Thu/Chi -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        app:cardBackgroundColor="@color/neutral_50">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp">

                            <FrameLayout
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:background="@drawable/bg_circle_purple">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_income"
                                    app:tint="@color/white"
                                    android:contentDescription="@string/label_income"/>
                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingStart="8dp">

                                <TextView
                                    style="@style/Caption1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_income"
                                    android:textColor="@color/neutral_800"/>

                                <TextView
                                    android:id="@+id/tvIncomeAmount"
                                    style="@style/Body1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/amount_income_placeholder"
                                    android:textColor="@color/black"/>
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        app:cardBackgroundColor="@color/neutral_50">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp">

                            <FrameLayout
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:background="@drawable/bg_circle_orange">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_spending"
                                    app:tint="@color/white"
                                    android:contentDescription="@string/cd_spending_icon"/>
                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingStart="8dp">

                                <TextView
                                    style="@style/Caption1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_spending"
                                    android:textColor="@color/neutral_800"/>

                                <TextView
                                    android:id="@+id/tvSpendingAmount"
                                    style="@style/Body1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/amount_spending_placeholder"
                                    android:textColor="@color/black"/>
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>

            <!-- ====== GIAO DỊCH GẦN ĐÂY ====== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/modal_bg">

                <LinearLayout
                    android:id="@+id/section_recent_transactions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvRecentTitle"
                        style="@style/Heading5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/title_recent_transactions"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvSeeAll"
                        style="@style/Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:paddingHorizontal="8dp"
                        android:gravity="center_vertical"
                        android:text="@string/label_see_all"
                        android:textColor="@color/neutral_800"
                        app:drawableEndCompat="@drawable/ic_chevron_right"
                        android:drawablePadding="4dp"
                        android:drawableTint="@color/neutral_800"
                        android:clickable="true"
                        android:focusable="true"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:divider="@drawable/divider_vertical"
                    android:showDividers="middle">

                    <!-- item 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="@drawable/bg_card_neutral_50"
                        android:layout_marginBottom="8dp">

                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_rounded_accent_1">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_food"
                                app:tint="@color/white"
                                android:contentDescription="@string/cd_transaction_icon"/>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="12dp">

                            <TextView
                                style="@style/Body1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txn_food_name"
                                android:textColor="@color/black"/>

                            <TextView
                                style="@style/Caption1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txn_food_date"
                                android:textColor="@color/neutral_800"/>
                        </LinearLayout>

                        <TextView
                            style="@style/Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txn_food_amount"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <!-- item 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="@drawable/bg_card_neutral_50"
                        android:layout_marginBottom="8dp">

                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_rounded_primary_1">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_rent_house"
                                app:tint="@color/white"
                                android:contentDescription="@string/cd_transaction_icon"/>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="12dp">

                            <TextView
                                style="@style/Body1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txn_rent_name"
                                android:textColor="@color/black"/>

                            <TextView
                                style="@style/Caption1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txn_rent_date"
                                android:textColor="@color/neutral_800"/>
                        </LinearLayout>

                        <TextView
                            style="@style/Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txn_rent_amount"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <!-- item 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="@drawable/bg_card_neutral_50">

                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_rounded_primary_2">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_money_bag"
                                app:tint="@color/white"
                                android:contentDescription="@string/cd_transaction_icon"/>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="12dp">

                            <TextView
                                style="@style/Body1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txn_salary_name"
                                android:textColor="@color/black"/>

                            <TextView
                                style="@style/Caption1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txn_salary_date"
                                android:textColor="@color/neutral_800"/>
                        </LinearLayout>

                        <TextView
                            style="@style/Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txn_salary_amount"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- ====== HẠN MỨC CHI TIÊU ====== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/modal_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/Heading5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/title_budget_limit"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvDetailLimit"
                        style="@style/Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_detail"
                        android:textColor="@color/neutral_800"
                        app:drawableEndCompat="@drawable/ic_chevron_right"
                        android:drawablePadding="4dp"
                        android:padding="4dp"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_card_primary_5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvSpentLabel"
                            style="@style/Caption1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/label_spent"
                            android:textColor="@color/neutral_800"/>

                        <TextView
                            android:id="@+id/tvSpentRatio"
                            style="@style/Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/0"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/pbBudget"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="8dp"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/progress_rounded"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp">

                        <TextView
                            android:id="@+id/tvMonthStart"
                            style="@style/Caption1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/date_0101"
                            android:textColor="@color/neutral_800"/>

                        <TextView
                            android:id="@+id/tvMonthEnd"
                            style="@style/Caption1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date_3101"
                            android:textColor="@color/neutral_800"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- ====== THEO DÕI VAY NỢ ====== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/modal_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/Heading5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/title_debt_tracking"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvDebtDetail"
                        style="@style/Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_detail"
                        android:textColor="@color/neutral_800"
                        app:drawableEndCompat="@drawable/ic_chevron_right"
                        android:drawablePadding="4dp"
                        android:padding="4dp"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvDebtMeta"
                    style="@style/Caption1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/debt_meta_placeholder"
                    android:textColor="@color/accent_1"
                    android:layout_marginTop="4dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_card_primary_5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvDebtLabel"
                            style="@style/Caption1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/label_paid"
                            android:textColor="@color/neutral_800"/>

                        <TextView
                            android:id="@+id/tvDebtRatio"
                            style="@style/Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/0"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/pbDebt"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="8dp"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/progress_rounded"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp">

                        <TextView
                            android:id="@+id/tvDebtStart"
                            style="@style/Caption1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/date_0103"
                            android:textColor="@color/neutral_800"/>

                        <TextView
                            android:id="@+id/tvDebtEnd"
                            style="@style/Caption1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date_3103"
                            android:textColor="@color/neutral_800"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
