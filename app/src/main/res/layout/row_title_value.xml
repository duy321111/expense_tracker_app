<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/bg_card_neutral_50" android:padding="12dp"
    android:layout_marginTop="8dp" android:gravity="center_vertical">

    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_category"/>
    <TextView android:id="@+id/tvTitle" style="@style/Body2"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1" android:paddingStart="12dp" android:text="Tiêu đề" android:textColor="@color/black"/>
    <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_chevron_right"/>
</LinearLayout>
