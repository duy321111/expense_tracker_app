<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_50">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        app:navigationIcon="@drawable/ic_back"
        app:titleCentered="true"
        app:titleTextColor="@color/primary_1"
        app:titleTextAppearance="@style/Heading5"
        app:title="Chi tiết ngân sách" />

    <!-- Nội dung -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="56dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- SECTION: Tổng đã chi -->
            <LinearLayout
                android:id="@+id/sectionTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginTop="8dp">

                <!-- Năm + Tháng (RecyclerView) -->

                <!-- Tổng đã chi -->
                <LinearLayout
                    android:id="@+id/rowTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvTotalLabel"
                        style="@style/Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng đã chi"/>

                    <View
                        android:id="@+id/dividerTotal"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvTotalAmount"
                        style="@style/Heading5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="7.945.000 đ"/>
                </LinearLayout>

                <!-- Donut chart -->
                <FrameLayout
                    android:id="@+id/donutContainer"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center">

                    <com.example.expense_tracker_app.ui.DonutChartView
                        android:id="@+id/donutChart"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:id="@+id/donutCenterTexts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/tvCenterTop"
                            style="@style/Heading5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100%"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/tvCenterBottom"
                            style="@style/Caption1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đã chi tiêu"
                            android:textColor="@color/neutral_800"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- SECTION: Cà phê -->
            <LinearLayout
                android:id="@+id/sectionCategoryCoffee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginTop="8dp">

                <!-- Tổng chi cho danh mục -->
                <LinearLayout
                    android:id="@+id/rowCategoryTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_card_neutral_50"
                    android:padding="12dp">

                    <FrameLayout
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_icon_round_primary_1">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_coffee"
                            app:tint="@color/white"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">



                        <TextView
                            android:id="@+id/tvCategoryTitle"
                            style="@style/Body1"
                            android:text="Cà phê"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tvCategoryDesc"
                            style="@style/Caption1"
                            android:text="Đã chi"
                            android:textColor="@color/neutral_800"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvCategoryAmount"
                        style="@style/Heading5"
                        android:text="150.000 đ"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Danh sách giao dịch -->
                <LinearLayout
                    android:id="@+id/transactionList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <!-- Giao dịch 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Heading5"
                                android:text="02"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                style="@style/Caption1"
                                android:text="Thứ tư, tháng 3 năm 2022"
                                android:textColor="@color/neutral_800"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <TextView
                            android:text="- 45.000 đ"
                            style="@style/Body1"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Chuyển khoản"
                            style="@style/Caption1"
                            android:textColor="@color/neutral_800"
                            android:layout_marginStart="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/neutral_200"
                        android:layout_marginVertical="4dp" />

                    <!-- Giao dịch 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Heading5"
                                android:text="12"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                style="@style/Caption1"
                                android:text="Thứ năm, tháng 3 năm 2022"
                                android:textColor="@color/neutral_800"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <TextView
                            android:text="- 30.000 đ"
                            style="@style/Body1"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Tiền mặt"
                            style="@style/Caption1"
                            android:textColor="@color/neutral_800"
                            android:layout_marginStart="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <!-- SECTION: Cà phê -->
            <LinearLayout
                android:id="@+id/sectionCategoryShopping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginTop="8dp">

                <!-- Tổng chi cho danh mục -->
                <LinearLayout
                    android:id="@+id/rowShoppingCategoryTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_card_neutral_50"
                    android:padding="12dp">

                    <FrameLayout
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_icon_round_primary_1">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_shopping"
                            app:tint="@color/white"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">



                        <TextView
                            android:id="@+id/tvShoppingCategoryTitle"
                            style="@style/Body1"
                            android:text="Cà phê"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tvShoppingCategoryDesc"
                            style="@style/Caption1"
                            android:text="Đã chi"
                            android:textColor="@color/neutral_800"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvShoppingCategoryAmount"
                        style="@style/Heading5"
                        android:text="150.000 đ"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Danh sách giao dịch -->
                <LinearLayout
                    android:id="@+id/transactionShoppingList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <!-- Giao dịch 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Heading5"
                                android:text="02"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                style="@style/Caption1"
                                android:text="Thứ tư, tháng 3 năm 2022"
                                android:textColor="@color/neutral_800"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <TextView
                            android:text="- 45.000 đ"
                            style="@style/Body1"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Chuyển khoản"
                            style="@style/Caption1"
                            android:textColor="@color/neutral_800"
                            android:layout_marginStart="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/neutral_200"
                        android:layout_marginVertical="4dp" />

                    <!-- Giao dịch 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Heading5"
                                android:text="12"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                style="@style/Caption1"
                                android:text="Thứ năm, tháng 3 năm 2022"
                                android:textColor="@color/neutral_800"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <TextView
                            android:text="- 30.000 đ"
                            style="@style/Body1"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Tiền mặt"
                            style="@style/Caption1"
                            android:textColor="@color/neutral_800"
                            android:layout_marginStart="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
