<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/neutral_200"
        app:titleCentered="true"
        app:titleTextAppearance="@style/Heading5"
        app:title="Thêm giao dịch"
        app:titleTextColor="@color/primary_1"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView

        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/btnSave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/layoutMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Loại giao dịch -->
            <LinearLayout
                android:id="@+id/row_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_input"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chọn loại giao dịch"
                    android:textColor="@color/neutral_900" />

                <ImageView
                    android:id="@+id/iv_type"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_list"
                    app:tint="@color/primary_1" />
            </LinearLayout>

            <!-- Danh mục -->
            <LinearLayout
                android:id="@+id/row_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_input"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chọn danh mục"
                    android:textColor="@color/neutral_900" />

                <ImageView
                    android:id="@+id/iv_category"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_category"
                    app:tint="@color/primary_1" />
            </LinearLayout>

            <!-- Số tiền -->
            <EditText
                android:id="@+id/etAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_input"
                android:digits="0123456789"
                android:hint="Nhập số tiền"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:paddingHorizontal="12dp"
                android:textColor="@color/neutral_900"
                android:textColorHint="@color/neutral_700"
                android:textSize="14sp" />

            <!-- Ngày -->
            <LinearLayout
                android:id="@+id/row_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_input"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="xx/xx/20xx"
                    android:textColor="@color/neutral_700" />

                <ImageView
                    android:id="@+id/iv_calendar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/primary_1" />
            </LinearLayout>

            <!-- Hình thức -->

            <TextView
                android:id="@+id/tv_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Hình thức sử dụng"
                android:textColor="@color/neutral_900"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layout_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Tiền mặt -->
                <LinearLayout
                    android:id="@+id/opt_cash"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card_neutral_50"
                    android:clipToOutline="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_circle_purple"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_cash"
                            app:tint="@color/white" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Tiền mặt"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Chuyển khoản -->
                <LinearLayout
                    android:id="@+id/opt_transfer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card_neutral_50"
                    android:clipToOutline="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_circle_orange"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_transfer"
                            app:tint="@color/white" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Chuyển khoản"
                        android:textColor="@color/accent_1"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Nút hiển thị/ẩn chi tiết -->
            <TextView
                android:id="@+id/btnToggleDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chi tiết"
                android:gravity="center"
                android:textColor="@color/primary_1"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_input"
                android:paddingVertical="10dp"/>

            <!-- Chi tiết -->
            <LinearLayout
                android:id="@+id/layout_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="16dp">

                <!-- Ghi chú -->
                <LinearLayout
                    android:id="@+id/row_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_note"
                        app:tint="@color/primary_1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Ghi chú"
                        android:textColor="@color/neutral_700"/>
                </LinearLayout>

                <!-- Địa điểm -->
                <LinearLayout
                    android:id="@+id/row_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="10dp"
                    android:layout_marginTop="8dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location"
                        app:tint="@color/primary_1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Địa điểm"
                        android:textColor="@color/neutral_700"/>
                </LinearLayout>

                <!-- Thêm hình ảnh -->
                <LinearLayout
                    android:id="@+id/row_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="10dp"
                    android:layout_marginTop="8dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_image"
                        app:tint="@color/primary_1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Thêm hình ảnh"
                        android:textColor="@color/neutral_700"/>
                </LinearLayout>

                <!-- Switch không tính vào báo cáo -->
                <LinearLayout
                    android:id="@+id/row_report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">


                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Không tính vào báo cáo"
                        android:textColor="@color/neutral_900"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchReport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="@color/primary_1"
                        app:trackTint="@color/primary_4"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_report_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/neutral_600"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Nút Lưu -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="44dp"
        android:alpha="0.5"
        android:background="@drawable/bg_rounded_primary_1"
        android:enabled="false"
        android:text="Lưu giao dịch"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
