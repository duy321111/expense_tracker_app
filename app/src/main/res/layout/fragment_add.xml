<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp" android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:gravity="center_horizontal">

        <TextView android:text="Thêm giao dịch mới"
            android:textColor="@color/text_primary" android:textSize="20sp" android:textStyle="bold"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="12dp"/>

        <ImageView android:id="@+id/imgHeader" android:layout_width="260dp" android:layout_height="170dp"
            android:src="@drawable/img_add_transaction" android:contentDescription="@null"/>

        <TextView android:text="Bạn có muốn thêm giao dịch mới hay không?"
            android:textColor="@color/text_secondary" android:textSize="14sp"
            android:layout_marginTop="12dp" android:layout_marginBottom="8dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <!-- Chọn loại giao dịch -->
        <RadioGroup android:id="@+id/rgType" android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content">

            <RadioButton android:id="@+id/rbIncome" android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:gravity="center" android:padding="16dp"
                android:text="Thu nhập" android:textColor="@color/text_primary"
                android:button="@null" android:drawableTop="@drawable/ic_income"
                android:background="@drawable/sel_radio_income"/>

            <RadioButton android:id="@+id/rbExpense" android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:gravity="center" android:padding="16dp"
                android:text="Chi tiêu" android:textColor="@color/text_primary"
                android:button="@null" android:drawableTop="@drawable/ic_expense"
                android:background="@drawable/sel_radio_expense"/>
        </RadioGroup>

        <!-- Hàng nút điều hướng như mockup -->
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Tiếp tục" android:textColor="@color/white"
            app:backgroundTint="@color/purple_main" android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvSkip"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Bỏ qua" android:textColor="@color/orange_main"
            android:layout_marginTop="8dp"/>

        <!-- Khối nhập chi tiết: ẨN cho tới khi chọn danh mục xong -->
        <LinearLayout
            android:id="@+id/sectionDetails"
            android:visibility="gone"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_marginTop="16dp">

            <!-- Chọn danh mục qua BottomSheet -->
            <Button
                android:id="@+id/btnCategory"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Chọn danh mục" android:textAllCaps="false"
                android:background="@drawable/bg_input_box" android:textColor="@color/text_primary"/>

            <!-- Số tiền -->
            <EditText android:id="@+id/etAmount" android:layout_width="match_parent" android:layout_height="wrap_content"
                android:hint="Nhập số tiền" android:inputType="number" android:background="@drawable/bg_input_box"
                android:layout_marginTop="12dp"/>

            <!-- Hình thức thanh toán -->
            <TextView android:text="Hình thức" android:textColor="@color/text_secondary"
                android:layout_marginTop="12dp"/>
            <Spinner android:id="@+id/spMethod" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="@drawable/bg_input_box"/>

            <!-- Ngày -->
            <Button android:id="@+id/btnDate" android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Chọn ngày" app:backgroundTint="@color/purple_main" android:textColor="@color/white"
                android:layout_marginTop="12dp"/>

            <!-- Ghi chú -->
            <TextView android:text="Ghi chú" android:textColor="@color/text_secondary"
                android:layout_marginTop="12dp"/>
            <EditText android:id="@+id/etNote" android:layout_width="match_parent" android:layout_height="wrap_content"
                android:background="@drawable/bg_input_box" android:hint="Ví dụ: cà phê sáng"/>

            <!-- Thêm ngay -->
            <Button android:id="@+id/btnSubmit" android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Thêm ngay" android:textColor="@color/white" app:backgroundTint="@color/purple_main"
                android:layout_marginTop="18dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

