<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_50">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        app:navigationIcon="@drawable/ic_back"
        app:titleCentered="true"
        app:titleTextAppearance="@style/Heading5"
        app:title="Ngân sách sử dụng"
        app:titleTextColor="@color/primary_1"/>

    <!-- Nội dung chính -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="12dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- SECTION: RecyclerView hiển thị tháng/năm -->
            <FrameLayout
                android:id="@+id/monthSection"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/modal_bg">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMonths"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:paddingHorizontal="8dp"
                    android:overScrollMode="never" />
            </FrameLayout>

            <!-- CARD: Ngân sách Ăn uống -->
            <LinearLayout
                android:id="@+id/BudgetCardHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical"
                android:background="@drawable/modal_bg">

                <TextView
                    android:text="Ngân sách Ăn uống"
                    android:textColor="@color/neutral_900"
                    style="@style/Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="Đã chi"
                        android:textColor="@color/neutral_700"
                        android:layout_width="0dp"
                        style="@style/Body2"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:text="1.200.000 / 2.000.000"
                        android:textColor="@color/neutral_900"
                        style="@style/Body2"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_marginTop="8dp"
                    android:max="100"
                    android:progress="60"
                    android:indeterminate="false"
                    android:progressDrawable="@drawable/progress_rounded" />
            </LinearLayout>

            <!-- CARD: Ngân sách Đi lại -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/modal_bg"
                android:orientation="vertical">

                <TextView
                    style="@style/Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Ngân sách Đi lại"
                    android:textColor="@color/neutral_900" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Body2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Đã chi"
                        android:textColor="@color/neutral_700" />

                    <TextView
                        style="@style/Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="600.000 / 1.000.000"
                        android:textColor="@color/neutral_900"
                        android:textStyle="bold" />
                </LinearLayout>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_marginTop="8dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="60"
                    android:progressDrawable="@drawable/progress_rounded" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical"
                android:background="@drawable/modal_bg">

                <TextView
                    android:text="Ngân sách Đi lại"
                    android:textColor="@color/neutral_900"
                    style="@style/Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="Đã chi"
                        android:textColor="@color/neutral_700"
                        style="@style/Body2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:text="600.000 / 1.000.000"
                        android:textColor="@color/neutral_900"
                        style="@style/Body2"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_marginTop="8dp"
                    android:max="100"
                    android:progress="60"
                    android:indeterminate="false"
                    android:progressDrawable="@drawable/progress_rounded" />
            </LinearLayout>

            <!-- Nút thêm ngân sách -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddBudget"
                style="@style/Body2"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:backgroundTint="@color/primary_1"
                android:text="Thêm ngân sách mới"
                android:textColor="@color/white"
                app:cornerRadius="12dp"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                app:iconPadding="8dp"/>


        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
