<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_50"
    android:fitsSystemWindows="true"
    tools:context=".ui.ProfileFragment"> <!-- SỬA: Đã thêm .ui. cho đúng với file Java bạn tạo -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:background="@drawable/modal_bg">

            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:contentDescription="@string/cd_user_avatar"
                android:src="@drawable/cute" />

            <!-- SỬA LỖI: Đã tách TextView ra khỏi ImageView & Dùng @string -->
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/profile_user_name"
                android:textColor="@color/neutral_900"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/profile_account"
            android:textColor="@color/neutral_700"
            android:textSize="16sp" />

        <!-- SỬA: Thêm lại icon và dùng @string -->
        <TextView
            android:id="@+id/btn_account_info"
            style="@style/SettingsItem"
            app:drawableStartCompat="@drawable/ic_edit"
            android:text="@string/profile_settings_general" />

        <TextView
            android:id="@+id/btn_transaction_history"
            style="@style/SettingsItem"
            app:drawableStartCompat="@drawable/ic_chart"
            android:text="@string/profile_transaction_history" />

        <TextView
            android:id="@+id/btn_my_wallets"
            style="@style/SettingsItem"
            app:drawableStartCompat="@drawable/ic_wallet"
            android:text="@string/profile_my_wallets" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/profile_other"
            android:textColor="@color/neutral_700"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btn_rate_app"
            style="@style/SettingsItem"
            android:text="@string/profile_rate_app" />

        <TextView
            android:id="@+id/btn_refer_friend"
            style="@style/SettingsItem"
            android:text="@string/profile_refer_friend" />

        <TextView
            android:id="@+id/btn_help"
            style="@style/SettingsItem"
            android:text="@string/profile_help" />

        <TextView
            android:id="@+id/btn_terms"
            style="@style/SettingsItem"
            android:text="@string/profile_terms" />

        <TextView
            android:id="@+id/btn_logout"
            style="@style/SettingsItem"
            android:text="@string/profile_logout"
            android:textColor="@color/accent_1" />

    </LinearLayout>
</ScrollView>