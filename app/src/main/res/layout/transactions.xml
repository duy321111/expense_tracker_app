<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_50">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        app:navigationIcon="@drawable/ic_back"
        app:titleCentered="true"
        app:titleTextAppearance="@style/Heading3"
        app:title="Giao dịch gần đây" />

    <!-- Nội dung -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="56dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- SECTION: Tổng đã chi -->
            <LinearLayout
                android:id="@+id/sectionTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginTop="8dp">

                <!-- Năm + Tháng (RecyclerView) -->
                <FrameLayout
                    android:id="@+id/monthSection"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:background="@color/neutral_50"
                    android:paddingHorizontal="0dp"
                    android:paddingVertical="8dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvMonths"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:overScrollMode="never"
                        android:clipToPadding="false"
                        android:paddingHorizontal="0dp"/>
                </FrameLayout>

                <!-- Tổng đã chi -->
                <LinearLayout
                    android:id="@+id/rowTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvTotalLabel"
                        style="@style/Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng đã chi"/>

                    <View
                        android:id="@+id/dividerTotal"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvTotalAmount"
                        style="@style/Heading5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="7.945.000 đ"/>
                </LinearLayout>

                <!-- Donut chart -->
                <FrameLayout
                    android:id="@+id/donutContainer"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center">

                    <com.example.expense_tracker_app.ui.view.DonutChartView
                        android:id="@+id/donutChart"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:id="@+id/donutCenterTexts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/tvCenterTop"
                            style="@style/Heading5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100%"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/tvCenterBottom"
                            style="@style/Caption1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đã chi tiêu"
                            android:textColor="@color/neutral_800"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- SECTION: Ngày 04 tháng 03 2023 -->
            <LinearLayout
                android:id="@+id/sectionDay_2023_03_04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvDayHeader_2023_03_04"
                    style="@style/Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày 04 tháng 03 2023"
                    android:textColor="@color/neutral_800" />

                <!-- Item (1) -->
                <LinearLayout
                    android:id="@+id/item1_2023_03_04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_card_neutral_50"
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:id="@+id/item1IconWrap"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_icon_round_accent_1">

                        <ImageView
                            android:id="@+id/item1Icon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_food"
                            app:tint="@color/white" />
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/item1Info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:id="@+id/item1Title"
                            style="@style/Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ăn uống"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/item1Method"
                            style="@style/Caption1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tiền mặt"
                            android:textColor="@color/neutral_800" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/item1Amount"
                        style="@style/Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- 99.000 đ"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- Item (2) -->
                <LinearLayout
                    android:id="@+id/item2_2023_03_04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_card_neutral_50"
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:id="@+id/item2IconWrap"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_icon_round_primary_1">

                        <ImageView
                            android:id="@+id/item2Icon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_home"
                            app:tint="@color/white" />
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/item2Info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:id="@+id/item2Title"
                            style="@style/Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cà phê"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/item2Method"
                            style="@style/Caption1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chuyển khoản"
                            android:textColor="@color/neutral_800" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/item2Amount"
                        style="@style/Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- 150.000 đ"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- Item (3) -->
                <LinearLayout
                    android:id="@+id/item3_2023_03_04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_card_neutral_50"
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:id="@+id/item3IconWrap"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_icon_round_primary_2">

                        <ImageView
                            android:id="@+id/item3Icon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_money_bag"
                            app:tint="@color/white" />
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/item3Info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:id="@+id/item3Title"
                            style="@style/Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trả nợ"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/item3Method"
                            style="@style/Caption1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chuyển khoản"
                            android:textColor="@color/neutral_800" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/item3Amount"
                        style="@style/Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- 420.000 đ"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>

            <!-- SECTION: Ngày 03 tháng 03 2023 -->
            <LinearLayout
                android:id="@+id/sectionDay_2023_03_03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvDayHeader_2023_03_03"
                    style="@style/Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày 03 tháng 03 2023"
                    android:textColor="@color/neutral_800"/>

                <LinearLayout
                    android:id="@+id/itemEmpty_2023_03_03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_card_neutral_50"
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvEmpty_2023_03_03"
                        style="@style/Caption1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Chưa có giao dịch)"
                        android:textColor="@color/neutral_800"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
