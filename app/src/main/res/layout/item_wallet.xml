<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_neutral_50"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <ImageView
        android:id="@+id/img_wallet_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_wallet"
        android:background="@drawable/bg_circle_purple"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/primary_1" />

    <TextView
        android:id="@+id/tv_wallet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Ví cơ bản"
        android:textColor="@color/neutral_900"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_wallet_icon"
        app:layout_constraintTop_toTopOf="@id/img_wallet_icon"
        app:layout_constraintBottom_toBottomOf="@id/img_wallet_icon"/>

    <TextView
        android:id="@+id/tv_wallet_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11.458.000 đ"
        android:textColor="@color/neutral_900"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>